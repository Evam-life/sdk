{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/tests/*": [
        "./__tests__/*"
      ]
    },
    "isolatedModules": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "src",
    "__tests__",
  ],
  "exclude": [
    "node_modules",
    "scripts"
  ]
}
