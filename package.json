{
  "name": "@evam/sdk",
  "version": "0.3.9",
  "description": "SDK for Evam platform",
  "main": "index.ts",
  "files": [
    "sdk/"
  ],
  "bin": {
    "evamw": "sdk/wrapper.js"
  },
  "scripts": {
    "test": "tsc && jest --no-cache --collect-coverage",
    "test-without-coverage": "jest --silent=false",
    "clear-jest": "jest --clearCache",
    "build": "tsc --project tsconfig.json && minify-all-js ./sdk -j -m -M -p",
    "pub": "node node_modules/publish-flatten --flatten sdk"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.0",
    "@devicefarmer/adbkit": "^3.2.3",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.6.2",
    "@mui/material": "^5.7.0",
    "@reduxjs/toolkit": "^1.8.1",
    "@types/node": "^16.11.34",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/react-redux": "^7.1.24",
    "framer-motion": "^10.15.1",
    "glob": "^8.0.3",
    "lodash": "^4.17.21",
    "publish-flatten": "^1.1.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-redux": "^8.0.1",
    "react-router-dom": "^6.3.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/bluebird": "^3.5.36",
    "@types/glob": "^7.2.0",
    "@types/jest": "28.1.0",
    "@types/lodash": "^4.14.195",
    "@types/node-forge": "^1.0.2",
    "@types/uuid": "^9.0.2",
    "eslint": "8.22.0",
    "jest": "28.1.3",
    "jest-environment-jsdom": "28.1.3",
    "minify-all-js": "~0.1.9",
    "react-scripts": "^5.0.1",
    "ts-jest": "^28.0.8",
    "ttypescript": "^1.5.13",
    "typedoc": "^0.23.14",
    "typedoc-plugin-markdown": "^3.13.6",
    "typescript": "~4.6.4"
  },
  "author": "",
  "license": "ISC",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "ignorePatterns": [
      "sdk"
    ],
    "rules": {
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "sdk"
          ]
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "globals": {
      "ts-jest": {
        "compiler": "ttypescript"
      }
    },
    "roots": [
      "./src",
      "./test",
      "./sdk"
    ],
    "setupFiles": [
      "./test/setup.js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
