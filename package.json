{
  "name": "@evam-life/sdk",
  "version": "3.0.0",
  "description": "Evam is an open platform. Deploy your app for the eco-system or utilize Evam as a foundation for your own solution.",
  "homepage": "https://evam.life",
  "repository": {
    "type": "git",
    "url": "https://github.com/Evam-life/sdk"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "evam-sideload": "bin/sideload.js",
    "evam-sign": "bin/sign.js",
    "create-certified-app": "bin/create-certified-app.js"
  },
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:core": "tsup",
    "build:scripts": "tsc --project scripts/bin/tsconfig.scripts.json",
    "docs:generate": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:open": "cd docs && open-cli index.html",
    "lint": "eslint --max-warnings 0",
    "lint:errors-only": "eslint --quiet",
    "test:all": "jest",
    "test:with-log": "npm run test:all -- --silent=false",
    "test:collect-coverage": "npm run test:all -- --collectCoverage",
    "detect-circular-deps": "dpdm --no-warning --no-tree --exit-code circular:1 src/index.ts",
    "dependency-graph:generate": "ts_dependency_graph --start src/index.ts --h --graph_folder | dot -T png > dependency_graph.png",
    "format": "prettier --ignore-path .gitignore --write src",
    "format:README.md": "prettier --write README.md",
    "prepack": "npm run lint && npm run detect-circular-deps && npm run format && npm run build"
  },
  "keywords": [
    "Evam",
    "First Responders",
    "Vehicle Services",
    "Certified Apps",
    "SDK",
    "API"
  ],
  "author": "Kain Bryan-Jones <kain@evam.life>",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@faker-js/faker": "^8.3.1",
    "@mxssfd/typedoc-theme": "^1.1.3",
    "@types/bluebird": "^3.5.36",
    "@types/faker": "^6.6.9",
    "@types/glob": "^7.2.0",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.14.202",
    "@types/madge": "^5.0.3",
    "@types/node": "^20.10.5",
    "@types/node-forge": "^1.3.11",
    "@types/tar": "^6.1.12",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "dpdm": "^3.14.0",
    "eledoc": "^0.2.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "faker": "^6.6.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-localstorage-mock": "^2.4.26",
    "npm-run-all": "^4.1.5",
    "open-cli": "^8.0.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "terser": "^5.26.0",
    "ts_dependency_graph": "^2.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typedoc": "^0.25.4",
    "typedoc-plugin-coverage": "^2.2.0",
    "typedoc-plugin-zod": "^1.1.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@devicefarmer/adbkit": "^3.2.3",
    "cac": "^6.7.14",
    "degit": "^2.8.4",
    "glob": "^8.0.3",
    "lodash": "^4.17.21",
    "tar": "^6.2.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/__tests__"
    ],
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/tests(.*)$": "<rootDir>/__tests__/$1",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/scripts/test-setup.js",
      "jest-localstorage-mock"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
